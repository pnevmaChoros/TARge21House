@model IEnumerable<TARge21House.Models.House.HouseIndexViewModel>

@{
	int rowNumber = 1;
}

<div class="h1">
	Houses
</div>

<div>
    <a asp-action="Create" asp-controller="houses" type="submit" class="btn btn-primary">Add</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">Area</th>
                <th scope="col">Price</th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var house in Model)
                {
                    <tr>
                        <td>@rowNumber</td>
                        <td>@house.Address</td>
                        <td>@house.City</td>
                        <td>@house.Area</td>
                        <td>@house.Price</td>
                        @*<td>@house.Id</td>*@

                        <td>
                            <a asp-action="details" asp-controller="houses" asp-route-id="@house.Id" class="btn btn-info">Details</a>
                            <a asp-action="delete" asp-controller="houses" asp-route-id="@house.Id" class="btn btn-danger">Delete</a>
                        </td>

                    </tr>

                    rowNumber += 1;
                }
            }
        </tbody>


    </table>
</form>